<h1>ログイン</h1>

<%= form_with url: login_path, method: :post, data: { turbo: false } do |f| %>
  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "パスワード" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">  
    <%= check_box_tag :remember_me, params[:remember_me] %>  
    <%= label_tag :remember_me %>  
  </div>  
  <div class="actions">
    <%= f.submit "ログイン", data: { turbo: false } %>
  </div>
<% end %>

<%= link_to 'トップページへ戻る', root_path, data: { turbo: false } %>